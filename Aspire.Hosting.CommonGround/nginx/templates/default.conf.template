server {
    listen       80;
    server_name  localhost;
    resolver 127.0.0.11 valid=10s ipv6=off;

    location /private-media {
        internal;
        alias /private-media;
    }

    location / {
        client_max_body_size 100M;
        set $upstream ${TARGET_ADDRESS};
        proxy_pass   $upstream$request_uri;
    }
}